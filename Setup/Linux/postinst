USER_HOME_DIR=$(getent passwd $SUDO_USER | cut -d: -f6)
mkdir -p $USER_HOME_DIR/.vst3
mkdir -p $USER_HOME_DIR/.lv2
mkdir -p $USER_HOME_DIR/.config/REAPER/ProjectTemplates
mkdir -p $USER_HOME_DIR/.config/REAPER/TrackTemplates
cp -r /tmp/icst.tmp/vst3/* $USER_HOME_DIR/.vst3/ || exit 1
cp -r /tmp/icst.tmp/lv2/* $USER_HOME_DIR/.lv2/ || exit 1
cp -r /tmp/icst.tmp/templates/ProjectTemplates/* $USER_HOME_DIR/.config/REAPER/ProjectTemplates || exit 1
cp -r /tmp/icst.tmp/templates/TrackTemplates/* $USER_HOME_DIR/.config/REAPER/TrackTemplates || exit 1
echo "install complete"
